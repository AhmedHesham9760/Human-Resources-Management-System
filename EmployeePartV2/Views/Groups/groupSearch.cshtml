@using EmployeePartV2.Models;
@model List<Group>
@{
    ViewBag.Title = "Search";
}

<table class="table table-striped table-bordered zero-configuration" id="groups-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Edit </th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="user">
                <td>@item.GroupID</td>
                <td>@item.Name </td>

                <td>
                    <button class="btn btn-success mb-2">
                        @Html.ActionLink("Edit", "edit", new { id = item.GroupID })
                    </button>
                </td>
                <td>
                    <button class="btn btn-danger mb-2">

                        @Html.ActionLink("Delete", "delete", new { id = item.GroupID }, new { onclick = "return confirm('are you sure to delete " + item.Name + " ')" })
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>




