@using EmployeePartV2.Models;
@model List<Group>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}






                <!-- Zero configuration table -->
    <section id="configuration">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title-wrap bar-success">
                            <h4 class="card-title">Group Permissions</h4>
                        </div>
                    </div>
                    <div class="card-body collapse show">
                        <div class="card-block card-dashboard">


                            <div class="row">
                                
                                <div class="col-lg-1"></div>
                                <div class="col-sm-12 col-md-6">
                                    <div id="DataTables_Table_0_filter"
                                            class="dataTables_filter">
                                        <label>
                                            Search:<input type="search" id="group-search"
                                                            class="form-control" placeholder="" aria-controls="DataTables_Table_0">
                                        </label>
                                    </div>
                                </div>
                                <div class="col-lg-1"></div>
                                <div class="col-lg-3">
                                    <button id="addRow" class="btn btn-primary mb-2">
                                        <i class="ft-plus"></i>&nbsp;

                                        @Html.ActionLink("Add new Group", "Create")

                                    </button>
                                </div>
                            </div>
                            <table class="table table-striped table-bordered zero-configuration" id="groups-table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>

                                        <th>Edit </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="user">
                                            <td>@item.GroupID</td>
                                            <td>@item.Name </td>

                                            <td>
                                                <button class="btn btn-success mb-2">
                                                    @Html.ActionLink("Edit", "edit", new { id = item.GroupID })
                                                </button>
                                            </td>
                                            @*<td>*@
                                                @*<button class="btn btn-danger mb-2">

                                                   @Html.ActionLink("Delete", "delete", new { id = item.GroupID }, new { onclick = "return confirm('are you sure to delete " + item.Name + " ')" })
                                                </button>*@
                                            @*</td>*@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div id="ddd">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
       
@section Scripts{
    <script>
        $("#group-search").on("input", function () {
            let name = $("#group-search").val();
            $("#groups-table").load("/Groups/groupSearch?groupName="+name);
        })
    </script>
}


