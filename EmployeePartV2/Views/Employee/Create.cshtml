@using EmployeePartV2.Models
@model Employee
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section id="horizontal-form-layouts">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="content-header">Add Employees Form</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title" id="horz-layout-basic">Employee Information</h4>
                    </div>
                    <p class="mb-0">This is the basic horizontal form with labels on left and cost estimation form is the default position.</p>
                </div>
                <div class="card-body">
                    <div class="px-3">
                        <form class="form form-horizontal" method="post" enctype="multipart/form-data">
                            <div class="form-body">
                                <h4 class="form-section">
                                    <i class="icon-user"></i> Personal Details
                                </h4>

                                <div class="form-group row">
                                    @Html.LabelFor(n => n.Name, new { @class = "col-md-3 label-control" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(n => n.Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(n => n.Name)
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(n => n.Address, new { @class = "col-md-3 label-control" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(n => n.Address, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(n => n.Address)

                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(n => n.Email, new { @class = "col-md-3 label-control" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(n => n.Email, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(n => n.Email)

                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(n => n.Phone, new { @class = "col-md-3 label-control" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(n => n.Phone, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(n => n.Phone)

                                    </div>
                                </div>

                                <h4 class="form-section">
                                    <i class="icon-book-open"></i>Other Details
                                </h4>


                                <div class="form-group row">
                                    @Html.LabelFor(n => n.Birthdate, new { @class = "col-md-3 label-control" })
                                    <div class="col-md-9">
                                        <div class="position-relative has-icon-left">
                                            @Html.EditorFor(n => n.Birthdate, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(n => n.Birthdate)

                                            <div class="form-control-position">
                                                <i class="ft-message-square"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(n => n.contractStartDate, new { @class = "col-md-3 label-control" })
                                    <div class="col-md-9">
                                        <div class="position-relative has-icon-left">
                                            @Html.EditorFor(n => n.contractStartDate, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(n => n.contractStartDate)

                                            <div class="form-control-position">
                                                <i class="ft-message-square"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(n => n.Gender, new { @class = "col-md-3 label-control" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(n => n.Gender, new { @class = "form-control", placeholder = "Type F or M", @maxlength = "1" })
                                        @Html.ValidationMessageFor(n => n.Gender)

                                    </div>
                                </div>

                                <div class=" row">
                                    <div class="col-md-12">
                                        <div class=" row form-group">
                                            @Html.LabelFor(n => n.StartTime, new { @class = "col-md-3 label-control" })
                                            <div class="position-relative has-icon-left col-lg-9">
                                                @Html.EditorFor(n => n.StartTime, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(n => n.StartTime)

                                                <div class="form-control-position">
                                                    <i class="ft-clock"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class=" row form-group">
                                            @Html.LabelFor(n => n.EndTime, new { @class = "col-md-3 label-control" })
                                            <div class="position-relative has-icon-left col-lg-9">
                                                @Html.EditorFor(n => n.EndTime, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(n => n.EndTime)

                                                <div class="form-control-position">
                                                    <i class="ft-clock"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    @Html.LabelFor(n => n.Salary, new { @class = "col-md-3 label-control" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(n => n.Salary, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(n => n.Salary)
                                    </div>
                                </div>



                                <div class="form-group row">
                                    @Html.LabelFor(n => n.SSN, new { @class = "col-md-3 label-control" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(n => n.SSN, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(n => n.SSN)

                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(n => n.Nationality, new { @class = "col-md-3 label-control" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(n => n.Nationality, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(n => n.Nationality)

                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(n => n.DeptID, new { @class = "col-md-3 label-control" })
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(n => n.DeptID, (SelectList)ViewBag.dept, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(n => n.DeptID)

                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="SSNFile" class="col-md-3 label-control">Upload SSNFile </label>

                                    <div class="col-md-9">
                                        <label id="projectinput8" class="file center-block">
                                            <input type="file" id="SSNFile" name="SSNFile">
                                            <span class="file-custom"></span>

                                        </label>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(n => n.Notes, new { @class = "col-md-3 label-control" })
                                    <div class="col-md-9">
                                        @Html.TextAreaFor(n => n.Notes, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(n => n.Notes)

                                    </div>
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="button" class="btn btn-danger mr-1">
                                    <i class="icon-trash"></i>
                                    <a href="/Employee/Index"> Cancel </a>
                                </button>
                                <button type="submit" class="btn btn-success">
                                    <i class="icon-note"></i> Save
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>

@section scripts{

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}