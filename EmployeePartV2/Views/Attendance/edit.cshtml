                                            <div class="col-md-12">
                                                <div class=" row form-group">
                                                    <label class="col-md-3 label-control">@Html.LabelFor(n => n.EndTime): </label>
                                                    <div class="position-relative has-icon-left col-lg-9">
                                                        @Html.TextBoxFor(n => n.EndTime, new { @type = "time", @class = "form-control" })
                                                        <div class="form-control-position">
                                                            <i class="ft-clock"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="row form-group">
                                                    @*<div class="danger">@ViewBag.InvalidAttendanceAndLeaveTime</div>*@
                                                    <div class="danger">@ViewBag.invalidValues</div>
                                                    <div class="danger">@ViewBag.startTime</div>
                                                    @*<div class="danger">@ViewBag.startTime</div>*@
                                                    <div class="danger">@ViewBag.empty</div>
                                                    <div class="danger">@ViewBag.equal</div>
                                                </div>
                                            </div>
                                            @*<input type="button" class="btn btn-danger mr-1" value="Cancel" />*@
                                            @Html.ActionLink("Cancel", "index", "Attendance", new { @class = "btn btn-danger mr-1" })
                                            <input type="submit" id="save" class="btn btn-success" value="Save" />
                                            @Html.HiddenFor(n => n.AttendanceID)
                                            @Html.HiddenFor(n => n.AttendanceDate)
                                            @Html.HiddenFor(n => n.Employee.Name)

                                        </div>

                                    </form>
                                </div>
                            </div>



                            <div class="form-actions">

                            </div>
                        </div>
                    </div>
                </div>
            </section>
     
